generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model rel_user_task {
  id      Int  @default(autoincrement()) @id
  task_id task
  user_id user
}

model task {
  active         Int             @default(1)
  created_at     DateTime
  name           String
  task_id        Int             @default(autoincrement()) @id
  rel_user_tasks rel_user_task[]
}

model user {
  active         Int             @default(1)
  email          String          @unique
  name           String
  password       String
  user_id        Int             @default(autoincrement()) @id
  rel_user_tasks rel_user_task[]
}